<table id="dir-tree">
	<% getDrives.each do |row| %>
		<tr data-tt-id="<%= row['guid'] %>" data-expanded="0" data-level="0" data-empty="0">
			<td data-dir="<%= row['drive'] %>:">
				<span class='folder'><b><%= row['drive'] %></b><span>(<%= row["GB free"] %> GB free)</span></span>
			</td>
		</tr>
	<% end %>
</table>
<ul id="contextMenu" class="dropdown-menu" role="menu">
    <li data-action="createFolder"><a tabindex="-1" href="#">Create folder</a></li>
    <!--<li data-action="editNew"><a tabindex="-1" href="#">Edit new folder</a></li>-->
</ul>